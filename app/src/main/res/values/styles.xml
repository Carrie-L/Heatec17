<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--<style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar"/>-->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowAnimationStyle">@style/ActivitySiwtchAnimation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/loading</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="ActivitySiwtchAnimation" parent="@android:style/Animation.Activity">
        <item name="@android:activityOpenEnterAnimation">@animator/slide_left_enter</item>
        <item name="@android:activityOpenExitAnimation">@animator/slide_left_exit</item>
        <item name="@android:activityCloseEnterAnimation">@animator/slide_right_enter</item>
        <item name="@android:activityCloseExitAnimation">@animator/slide_right_exit</item>
        <!--
        <item name="@android:fragmentOpenEnterAnimation">@animator/slide_left_enter</item>
        <item name="@android:fragmentOpenExitAnimation">@animator/slide_left_exit</item>
        <item name="@android:fragmentCloseEnterAnimation">@animator/slide_right_enter</item>
        <item name="@android:fragmentCloseExitAnimation">@animator/slide_right_exit</item>


        -->
    </style>

    <style name="NotificationText" parent="android:TextAppearance.StatusBar.EventContent" />

    <style name="Dialog_No_Border">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>
<style name="HoloLightDialog_No_Border" parent="android:style/Theme.Holo.Light.Dialog.NoActionBar">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="main_nav_icon">
        <item name="android:width">30dp</item>
        <item name="android:height">30dp</item>
    </style>

    <style name="main_nav_text">
        <item name="android:gravity">center_horizontal|top</item>
        <item name="android:height">30dp</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="Transparent" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>
    </style>
    
    <style name="spinner_style">
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:gravity">center</item>
        </style>
        
    <style name="btn_language_style">
            <item name="android:layout_width">56dp</item>
            <item name="android:layout_height">30dp</item>
            <item name="android:layout_alignBottom">@id/imgTopBg</item>
            <item name="android:layout_marginBottom">25dp</item>
            <item name="android:layout_marginRight">5dp</item>
    </style>
    
     <style name="btn_language_pad_style">
            <item name="android:layout_width">56dp</item>
            <item name="android:layout_height">30dp</item>
            <item name="android:layout_alignBottom">@id/imgTopBg</item>
            <item name="android:layout_marginBottom">15dp</item>
            <item name="android:layout_marginRight">5dp</item>
    </style>
    
    <style name="pad_main_iv_big">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    
    <style name="pad_main_iv_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    
    <style name="pad_main_iv_small_last">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="MyToolBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:actionMenuTextColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
</resources>