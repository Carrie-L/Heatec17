<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="aty"
            type="com.adsale.HEATEC.activity.SubscribeActivity" />

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ccc"
            android:padding="5dp"
            android:text="@string/subscribe_str001" />

        <TextView
            style="@style/subscribe_text_style"
            android:text="@string/subscribe_str002" />

        <EditText
            android:id="@+id/et_company"
            style="@style/subscribe_edit_style"
            android:inputType="text"
            android:maxLength="100"
            android:text="@={aty.company}" />

        <TextView
            style="@style/subscribe_text_style"
            android:text="@string/subscribe_str003" />

        <EditText
            android:id="@+id/et_name"
            style="@style/subscribe_edit_style"
            android:inputType="text"
            android:maxLength="50"
            android:text="@={aty.name}" />

        <TextView
            style="@style/subscribe_text_style"
            android:text="@string/register_str004" />

        <EditText
            android:id="@+id/et_email"
            style="@style/subscribe_edit_style"
            android:inputType="textEmailAddress"
            android:maxLength="50"
            android:text="@={aty.email}" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnSend"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/btn_bg"
                android:onClick="@{()->aty.onSend()}"
                android:text="@string/reg_submit"
                android:textColor="#fff" />

            <Button
                android:id="@+id/btnReset"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/btnSend"
                android:layout_toRightOf="@+id/btnSend"
                android:background="@drawable/btn_bg"
                android:onClick="@{()->aty.onReset()}"
                android:text="@string/reg_reset"
                android:textColor="#fff" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:onClick="@{()->aty.onPrivacy()}"
            android:text="@string/subscribe_str005"
            android:textColor="#ff0000" />



    </LinearLayout>

</layout>